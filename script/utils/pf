#!/bin/bash
# å¿«é€ŸæŸ¥æ‰¾ä½”ç”¨ç«¯å£çš„é€²ç¨‹

if [ -z "$1" ]; then
  echo "Usage: portfind <port>"
  echo "Example: portfind 3000"
  exit 1
fi

PORT=$1

echo "ğŸ” Searching for process on port $PORT..."

if [ "$(uname)" = "Darwin" ]; then
  lsof -i :$PORT -P -n
else
  sudo netstat -tulpn | grep ":$PORT "
fi
